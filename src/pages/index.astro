---
import Layout from '../layouts/Layout.astro';
import { Header } from '../components/Header';
import { Hero } from '../components/Hero';
import { Services } from '../components/Services';
import { About } from '../components/About';
import { Contact } from '../components/Contact';
import { Footer } from '../components/Footer';

// Hero data
const heroData = {
  headline: "Quality Software, Smart Pricing",
  subtext: "Dominitec delivers custom software and web applications with the quality you expect, at rates that make sense. Based in the Dominican Republic, we bridge cultures and timezones to become your ideal development partner.",
  ctaText: "Get a Quote",
  techStack: [
    { name: "React", icon: "react" },
    { name: "Svelte", icon: "svelte" },
    { name: "Vue.js", icon: "vuejs" },
    { name: "TypeScript", icon: "typescript" },
    { name: "Python", icon: "python" },
    { name: "Elixir", icon: "elixir" },
    { name: "Go", icon: "go" },
    { name: "Rust", icon: "rust" },
    { name: "PostgreSQL", icon: "postgresql" },
    { name: "Docker", icon: "docker" },
    { name: "Kubernetes", icon: "kubernetes" }
  ]
};

// Services data
const servicesData = {
  services: [
    {
      id: "custom-software",
      icon: "cog",
      title: "Custom Software Development",
      description: "Tailored solutions built from the ground up to match your exact business needs. From internal tools to customer-facing platforms, we turn your vision into reliable, scalable software."
    },
    {
      id: "web-mobile",
      icon: "smartphone",
      title: "Web & Mobile Apps",
      description: "Modern, responsive applications that work beautifully across all devices. We build fast, intuitive experiences using React, React Native, and the latest web technologies."
    }
  ]
};

// Contact data
const contactData = {
  contact: {
    headline: "Get in Touch",
    subtext: "Have a project in mind? We'd love to hear about it. Send us a message and we'll get back to you within 24 hours.",
    submitButtonText: "Send Message",
    fields: {
      name: {
        label: "Name",
        placeholder: "Your name"
      },
      email: {
        label: "Email",
        placeholder: "you@example.com"
      },
      message: {
        label: "Message",
        placeholder: "Tell us about your project..."
      }
    },
    successMessage: "Thanks for reaching out! We'll be in touch soon."
  }
};
---

<Layout>
  <Header
    client:load
    onGetQuoteClick={() => {
      document.getElementById('contact')?.scrollIntoView({ behavior: 'smooth' });
    }}
  />

  <main>
    <Hero
      client:load
      headline={heroData.headline}
      subtext={heroData.subtext}
      ctaText={heroData.ctaText}
      techStack={heroData.techStack}
      onCtaClick={() => {
        document.getElementById('contact')?.scrollIntoView({ behavior: 'smooth' });
      }}
    />

    <Services
      client:load
      services={servicesData.services}
    />

    <About client:load />

    <Contact
      client:load
      contact={contactData.contact}
    />
  </main>

  <Footer client:load />

  <!-- Dark mode toggle button -->
  <button
    id="theme-toggle"
    class="fixed bottom-6 right-6 p-3 rounded-full bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 shadow-lg hover:shadow-xl transition-all duration-200 z-50"
    aria-label="Toggle dark mode"
  >
    <!-- Sun icon (shown in dark mode) -->
    <svg class="w-6 h-6 hidden dark:block text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
    </svg>
    <!-- Moon icon (shown in light mode) -->
    <svg class="w-6 h-6 block dark:hidden text-slate-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
    </svg>
  </button>

  <script>
    const themeToggle = document.getElementById('theme-toggle');
    themeToggle?.addEventListener('click', () => {
      (window as any).toggleTheme?.();
    });
  </script>
</Layout>
